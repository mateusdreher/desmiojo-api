{
  "LoginInput": {
    "type": "object",
    "required": ["login", "password"],
    "properties": {
      "login": {
        "type": "string",
        "format": "email",
        "example": "john.doe@email.com"
      },
      "password": { "type": "string", "example": "Password123" }
    }
  },
  "LoginOutput": {
    "type": "object",
    "properties": {
      "token": { "type": "string" },
      "refreshToken": { "type": "string" }
    }
  },
  "CreateUserInput": {
    "type": "object",
    "properties": {
      "name": { "type": "string" },
      "login": { "type": "string" },
      "textPassword": { "type": "string" }
    }
  },
  "UserOutput": {
    "type": "object",
    "properties": {
      "id": { "type": "string", "format": "uuid" },
      "name": { "type": "string" },
      "login": { "type": "string" }
    }
  }
}
